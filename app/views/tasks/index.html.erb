<h1>My tasks</h1>

<%= link_to "Add a nex task", new_task_path %>
<br>
<br>
<br>

<% @tasks.each do |task| %>

  <% if task[:completed] == true %>
  <input type="checkbox" name="" value="" checked>
  <% else %>
  <input type="checkbox" name="" value="">
  <% end %>

  <h2><%= link_to task[:title], task_path(task) %></h2>
  <p><%= link_to "delete", task_path(task), method: :delete %></p>

<% end %>
